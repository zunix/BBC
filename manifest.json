{
  "name": "Brand Base Colorizing",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "This extension should not do stupid things! #CHANGEME",
  "homepage_url": "http://brandad-systems.de",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options/index.html",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "page action demo",
    "default_popup": "src/page_action/page_action.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "storage",
    "http://127.0.0.1:8080/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://127.0.0.1:8080/*"
      ],
      "js": [
        "dist/content-scripts/utils/bbc_consoleMessages.min.js",
        "dist/content-scripts/utils/bbc_domMagic.min.js",
        "js/jquery/jquery.min.js",
        "src/inject/bbc_init.js",
        "src/inject/bbc_ExtensionEventHandler.js"

      ],
      "run": "document_start"
    }
  ],
  "web_accessible_resources": [
    "src/stylesheets/*",
    "js/*"
  ]
}
